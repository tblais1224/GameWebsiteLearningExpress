<% include partials/header.ejs %>

<h1>These are all the pictures on page <%= pageNumber %></h1>

<div class="row">
    <% for(var i = 0; i<picData.results.length; i++){ %>

        <div style="border: 2px solid red; width: 290px; background-color: <%= picData.results[i].color %>">
            <img src="<%= picData.results[i].urls.small %>" style="width:286px;
            height: 180px;"/>
            <p>By: <%= picData.results[i].user.name %> on <%= picData.results[i].created_at%></p>
            <p>Dimensions: <%= picData.results[i].width %>X<%= picData.results[i].height %></p>
            <p>Likes: <%= picData.results[i].likes %></p>
        </div>
    <% } %>
</div>

