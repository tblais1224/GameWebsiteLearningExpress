<% include partials/header.ejs %>

<h1>Add a game here if you dare!</h1>

<!-- adding the action and method means method is run first when route is called -->
<!-- give everything a name so theirs a way to call and grab it  -->
<form action="/addgame" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Epic War 4" name="title">
  </div>
  <div class="form-group">
    <label>Creator</label>
    <input type="text" class="form-control" placeholder="rudy_sudarto" name="creator">
  </div>
    <div class="form-group">
    <label>Size  (H x W)</label>
    <input type="text" class="form-control" placeholder="700" name="width">
    <input type="text" class="form-control" placeholder="525" name="height">
  </div>
  <h3>Upload Your Files</h3>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
    </div>
    <div class="custom-file">
      <input type="file" class="custom-file-input" id="gameInput" aria-describedby="inputGroupFileAddon01" name="gameFile">
      <label class="custom-file-label" for="gameInput">Game file(.swf)</label>
    </div>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
    </div>
    <div class="custom-file">
      <input type="file" class="custom-file-input" id="imageInput" aria-describedby="inputGroupFileAddon01" name="imageFile">
      <label class="custom-file-label" for="imageInput">Image file</label>
    </div>
    
  </div>
